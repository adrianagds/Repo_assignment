def celsius_to_fahrenheit(celsius):

    fahrenheit = (celsius * 9/5) + 32
    return fahrenheit

celsius_input = float(input("Enter the temperature in Celsius to convert to Fahrenheit: "))
fahrenheit_result = celsius_to_fahrenheit(celsius_input)

print(f"{celsius_input}째C in Fahrenheit is: {fahrenheit_result}째F")
print(f"0째C in Fahrenheit is: {celsius_to_fahrenheit(0)}째F")
